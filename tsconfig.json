{
  "extends": "@patract/dev/config/tsconfig.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*",
    "dist/**/*",
    "**/dist/**/*",
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@arche-polkadot/abstract-wallet": ["packages/abstract-wallet/src"],
      "@arche-polkadot/abstract-wallet/*": ["packages/abstract-wallet/src/*"],
      "@arche-polkadot/extension-wallet": ["packages/extension-wallet/src"],
      "@arche-polkadot/extension-wallet/*": ["packages/extension-wallet/src/*"],
      "@arche-polkadot/types": ["packages/types/src"],
      "@arche-polkadot/types/*": ["packages/types/src/*"],
      "@arche-polkadot/react-core": ["packages/react-core/src"],
      "@arche-polkadot/react-core/*": ["packages/react-core/src/*"]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "module": "CommonJS"
  }
}
